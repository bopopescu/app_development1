#:import utils kivy.utils

<HomeScreen>:
    FloatLayout:

        # 1st line
        LabelButton:
            pos_hint: {"top": 1, "left": 1}
            size_hint: 0.1, 0.1
            text: "<"
            font_size: "20px"
            on_release: app.change_screen('login_screen')
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#7030a0")
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            pos_hint: {"top": 1, "right": 1}
            size_hint: 0.9, 0.1
            text: "log out"
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#7030a0")
                Rectangle:
                    size: self.size
                    pos: self.pos

