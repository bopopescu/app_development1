#:import utils kivy.utils

<PatdiagScreen>: # the name should match the class
    FloatLayout:

        # 1st line
        LabelButton:
            pos_hint: {"top": 1, "left": 1}
            size_hint: 0.1, 0.1
            text: "<"
            font_size: "20px"
            on_release: app.change_screen('home_screen')
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#7030a0")
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            pos_hint: {"top": 1, "right": 1}
            size_hint: 0.9, 0.1
            text: "diagnosis"
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#7030a0")
                Rectangle:
                    size: self.size
                    pos: self.pos

        # 2nd line
        Label:
            pos_hint: {"top": 0.9, "left": 1}
            size_hint: 1, 0.03
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#ffffff")
                Rectangle:
                    size: self.size
                    pos: self.pos

        # 3rd line
        GridLayout:
            rows: 1
            pos_hint: {"top": 0.87, "left": 1}
            size_hint: 1, 0.35
            Label:
                pos_hint: {"top": 0.87, "left": 1}
                size_hint: 0.03, 0.35
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#ffffff")
                    Rectangle:
                        size: self.size
                        pos: self.pos
            TextInput:
                id: doctor_diagnosis
                pos_hint: {"top": 0.87, "left":0.97}
                size_hint: 0.94, 0.35
                multiline: True
                background_color: 1, 1, 1, 1
            Label:
                pos_hint: {"top": 0.87, "right": 1}
                size_hint: 0.03, 0.35
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#ffffff")
                    Rectangle:
                        size: self.size
                        pos: self.pos

        # 4th line
        Label:
            pos_hint: {"top": 0.52, "left": 1}
            size_hint: 1, 0.02
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#ffffff")
                Rectangle:
                    size: self.size
                    pos: self.pos

        # 5th line
        GridLayout:
            rows: 1
            pos_hint: {"top": 0.5, "left": 1}
            size_hint: 1, 0.35
            Label:
                pos_hint: {"top": 0.5, "left": 1}
                size_hint: 0.03, 0.35
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#ffffff")
                    Rectangle:
                        size: self.size
                        pos: self.pos
            TextInput:
                id: patient_diagnosis
                pos_hint: {"top": 0.5, "left":0.97}
                size_hint: 0.94, 0.35
                multiline: True
                background_color: 1, 1, 1, 1
            Label:
                pos_hint: {"top": 0.5, "right": 1}
                size_hint: 0.03, 0.35
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#ffffff")
                    Rectangle:
                        size: self.size
                        pos: self.pos

        # line 6
        Label:
            pos_hint: {"top": 0.15, "left": 1}
            size_hint: 1, 0.04
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#ffffff")
                Rectangle:
                    size: self.size
                    pos: self.pos

        # line 7
        GridLayout:
            rows: 1
            pos_hint: {"top": 0.11, "left": 1}
            size_hint: 1, 0.07
            Label:
                pos_hint: {"top": 0.11, "left": 1}
                size_hint: 0.3, 0.07
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#ffffff")
                    Rectangle:
                        size: self.size
                        pos: self.pos
            LabelButton:
                id: submit
                pos_hint: {"top": 0.11, "left":0.7}
                size_hint: 0.4, 0.07
                text: "submit"
                color: utils.get_color_from_hex("#ffffff")
                font_size: "20px"
                on_release: app.submit_patient_diagnosis() # app.change_screen('login_screen')
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#aaaaaa")
                    Rectangle:
                        size: self.size
                        pos: self.pos
            Label:
                pos_hint: {"top": 0.11, "right": 1}
                size_hint: 0.4, 0.07
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex("#ffffff")
                    Rectangle:
                        size: self.size
                        pos: self.pos

        # line 6
        Label:
            pos_hint: {"top": 0.04, "left": 1}
            size_hint: 1, 0.04
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#ffffff")
                Rectangle:
                    size: self.size
                    pos: self.pos